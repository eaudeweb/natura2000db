<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map[
  <!ENTITY EPSG_31700 "+proj=sterea +lat_0=46 +lon_0=25 +k=0.99975 +x_0=500000 +y_0=500000 +ellps=krass +units=m +no_defs">
  <!ENTITY GOOGLE_MERCATOR "+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +ellps=WGS84 +datum=WGS84 +units=m +no_defs">
  <!ENTITY WGS84 "+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
]>

<Map srs="&GOOGLE_MERCATOR;">

  <Style name="Sites">
    <Rule>
      <PolygonSymbolizer fill="#575" fill-opacity="0.3" />
      <LineSymbolizer stroke="#575" stroke-width="1.0" />
    </Rule>
  </Style>

  <Layer name="SCI" srs="&WGS84;">
    <StyleName>Sites</StyleName>
    <Datasource>
      <Parameter name="type">ogr</Parameter>
      <Parameter name="file">../static/sci-wgs84.geojson</Parameter>
      <Parameter name="layer">OGRGeoJSON</Parameter>
    </Datasource>
  </Layer>

</Map>
